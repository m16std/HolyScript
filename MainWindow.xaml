<Window x:Class="custom_pl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:custom_pl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="input_textbox" FontFamily="TriodPostnaja"  FontSize="18" AcceptsReturn="True" HorizontalAlignment="Stretch" Margin="10,30,5,10" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch"/>
        <TextBox x:Name="output_textbox" FontFamily="TriodPostnaja"  FontSize="18" AcceptsReturn="True" Grid.Column="1" HorizontalAlignment="Stretch" Margin="5,30,10,10" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch"/>
        <Button Content="Прочитать" Click="parsing" FontFamily="TriodPostnaja" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="73"/>

    </Grid>
</Window>
